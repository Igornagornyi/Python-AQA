
def arithmetic(value1:int, value2:int, operation:str)->int or str:

    """Function which summerizes, subtracts, multiplies, divides values"""

    if operation == '+':
        result = value1 + value2    
    elif operation == '-':
        result = value1 - value2
    elif operation == '*':
        result = value1 * value2
    elif operation == '/':
        result = value1/value2
    else:
        result = f"Not known operation {operation}"

    return result


